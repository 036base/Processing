<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF">
	<Properties>
		<Property name="date_console">%d{yyyy-MM-dd HH:mm:ss}</Property>
		<Property name="date_log">%d{yyyy-MM-dd HH:mm:ss.SSS}</Property>
		<Property name="daily_log">log/mycoloring_%d{yyyy-MM-dd}.log</Property>
	</Properties>
	<appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="${date_console} %msg %n" />
		</Console>
		<RollingFile name="File" fileName="log/mycoloring.log" filePattern="${daily_log}.zip">
			<PatternLayout pattern="${date_log} [ %-5level ] %logger{10} - %msg %n" />
			<Policies>
				<TimeBasedTriggeringPolicy />
			</Policies>
		</RollingFile>
	</appenders>
	<loggers>
		<root level="debug">
			<appender-ref ref="Console" level="info" />
			<appender-ref ref="File" level="debug" />
		</root>
	</loggers>
</configuration>